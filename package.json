{
  "name": "spotified",
  "version": "1.0.5",
  "description": "A strongly typed Spotify Web API SDK for browser and Node.js",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/mjs/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:mjs",
    "build:mjs": "tsc --project tsconfig.mjs.json && cp package-configs/package.mjs.json dist/mjs/package.json",
    "build:cjs": "tsc --project tsconfig.cjs.json && cp package-configs/package.cjs.json dist/cjs/package.json",
    "start": "npm run build && node ./dist/index.js",
    "test": "jest",
    "prepare": "husky install"
  },
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.js"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abdullah-Malik/spotified.git"
  },
  "keywords": [
    "spotify",
    "spotify api",
    "client",
    "sdk",
    "web api",
    "music"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Abdullah Malik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Abdullah-Malik/spotified/issues"
  },
  "homepage": "https://github.com/Abdullah-Malik/spotified#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.39",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fetch-mock": "^10.0.7",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "ts-jest": "^29.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "useESM": true
      }]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [".ts"],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
